<body>
	<script>
		/* Have the function MeanMode(arr) take the array of numbers stored in arr and return 1 if the mode equals the mean, 0 if they don't equal each other.
			(ie. [5, 3, 3, 3, 1] should return 1 because the mode (3) equals the mean (3)). 
			The array will not be empty, will only contain positive integers, and will not contain more than one mode. 
		*/

		function MeanMode(arr) {
	
			var mean = 0;
			var sum = 0;

			for (var i=0;i<arr.length;i++) {
				sum += arr[i];
			}

			mean = sum/arr.length;
		
			//return mean;

			arr.sort(function (a,b) {return a-b});
			//console.log(arr);
			var ModeArr = [];
			
			while (arr.length > 0) {
				var count = 0;
				while (arr[0] == arr[1]) {
					arr.shift();
					count++;
				}
				count++;
				ModeArr[arr[0]] = count;
				arr.shift();
				console.log(ModeArr);
			}

			//var mode = ModeArr.indexOf(Math.max.apply(Math,ModeArr));
			//console.log(mode);

			var mode;
			var modeValue;
	
			for (key in ModeArr) {
				if (!modeValue || ModeArr[key] > modeValue ) {
					modeValue = ModeArr[key];
					mode = key;
				}
			}

			mode = parseInt(mode);
			console.log(mode);
			console.log(modeValue);
			console.log(mean);
			console.log(sum);
	
			

			if (mode == mean)
				return 1;
			else 
				return 0;

		}
 
		array = [5,3,3,3,3,1];	
		//array = [13, 18, 13, 14, 13, 16, 14, 21, 13];
		console.log(MeanMode(array));

	</script>
