		function LetterCount(str) {
			var arr = str.toLowerCase().split(" ");
			console.log(arr);

			var word = "";

			i=4;
			//for (var i=0;i<arr.length;i++) {
				var temp = arr[i].split("").sort();
				var tempArray = [];
				while (temp.length != 0) {
					
					var count = 0;
					if (temp[0] == temp[1]) {
						temp.shift();
						count++;
					}

					count++;
					tempArray[temp[0]] = count;
					temp.shift();
					console.log(tempArray);
				}

				var letterKey;
				var letterValue;

				for (key in tempArray) {
					if (!letterKey || ModeArr[key] > letterKey ) {
						letterValue = ModeArr[key];
						letterKey = key;
					}
				}
			//}

