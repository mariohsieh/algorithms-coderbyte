<body>
	<script>
		// write a function that returns the factorial of a given number.

		function factorial(num) {
			if (num == 0) {
				return 0;
			} else {
				var total = 1;
				for (var i = num;i>0;i--) {
					total *= i;
				}	
	
				return total;
			}
		}

		number = 6;
		console.log(factorial(number));
	</script>
</body>
