<body>
	<script>
		// Write a function that returns true if the pattern '+Number+' exists

		function SimpleSymbols(str) {
			var pattern = /[a-zA-Z]/;
				
			for (var i=0;i<str.length-1;i++) {
				if (pattern.test(str[i])) {
					if (i == 0) {
						return false;
					} else if (str[i-1] == "+" && str[i+1] == "+") {
						return true;
					} else {
						return false;
					}
				}
			}
			return false;  
		}

		string = "+++e+";
		console.log(SimpleSymbols(string));
	</script>
</body>
